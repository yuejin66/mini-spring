          init-method="initDataMethod" destroy-method="destroyDataMethod"/>
    <bean id="customerService" class="com.yuejin66.springframework.ioc.bean.customer.CustomerService">
        <property name="id" value="10001"/>
        <property name="companyName" value="腾讯"/>
